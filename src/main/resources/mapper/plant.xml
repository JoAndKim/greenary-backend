<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.joandkim.greenery.mapper.PlantMapper">
    <select id="getPlants" resultType="com.joandkim.greenery.vo.Plant">
        SELECT *
        FROM greenery.plant
        WHERE 1=1
        <choose>
            <when test="group != null and group != ''">
                AND group = #{group}
            </when>
            <when test="competence != null and competence != ''">
                AND competence = #{competence}
            </when>
            <when test="brightness != null and brightness != ''">
                AND brightness = #{brightness}
            </when>
        </choose>
    </select>
</mapper>
